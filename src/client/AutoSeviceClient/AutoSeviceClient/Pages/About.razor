@page "/about"


<MudTable Items="@_elements" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading" LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh>О чём</MudTh>
        <MudTh>Что</MudTh>
    </HeaderContent>

    <RowTemplate>
        <MudTd DataLabel="Nr">@context.Type</MudTd>
        <MudTd DataLabel="Sign">@context.Value</MudTd>
    </RowTemplate>
</MudTable>


@code {
    public class AboutData
    {
        public string Type { get; set; }
        public string Value { get; set; }
    }

    private bool _loading;

    private List<AboutData>
    _elements;

    /// <inheritdoc />
    protected override void OnInitialized()
    {
        _elements = new List<AboutData>
        {
            new()
            {
                Type = "",
                Value = ""
            }
        };
    }

}
